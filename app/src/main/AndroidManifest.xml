<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imetu.imet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".database.DBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/imetlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5a886e0e5fc27349ea9c9dabe31c6ec1869cff45" />

        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.AddMember" />
        <activity android:name=".activity.DetailActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".activity.AdvanceSearchActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.TakePhoto" />
        <activity android:name=".activity.ImagePreview" />
        <activity android:name=".activity.AddEditActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>